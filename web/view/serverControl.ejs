<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>ListenServer Server</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
            background-color: #f0f3f6
        }

        .terminalLike{
            background-color: rgb(46, 52, 64);
            color: rgb(191,97,106);
            font-family: "Lucida Sans Typewriter";
            font-size: 0.8em;
        }

    </style>
</head>

<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <small><b>DataBase</b></small>
                        <div class="card-text">Name: <%= serverData.name%></div>
                        <div class="card-text">ID: <%= serverData._id%></div>
                        <div class="card-text">Redirection: <%= serverData.redirect%></div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <small><b>UNIX</b></small>
                        <div class="card-text">PID: <%= serverData.pid%>%></div>
                        <div class="card-text">Port: <%= serverData.port%></div>
                        <div class="card-text">Version: <%= serverData.port%></div>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                    <div class="card">
                        <div class="card-body">
                            <small><b>Control</b></small>
                            <h6>Start/Stop</h6>
                            <% if(!serverState){ %>
                                <button onclick="sendServerState(true, '<%= serverData._id  %>')" type="button"  class="<%= !serverData.state ? 'btn btn-primary' : 'btn btn-primary disabled' %>">START</button>
                            <% } else{ %>  
                                <button onclick="sendServerState(false, '<%= serverData._id  %>')" type="button"  class="btn btn-danger">STOP</button>
                            <% } %>
                            <br>
                        </div>
                    </div>
                </div>

        </div>
    </div>
    <br>


    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <small><b>Control</b></small>
                        <div class="card-text">State: <%= serverState %>%></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-8">
                <div class="card">
                    <div class="list-group">
                        <% for(var i=0; i<dataList.length; i++) { %>
                            <div href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">PORT[<%= dataList[i].port %>] IP[<%= dataList[i].ip %>]</h5>
                                    <small><%= dataList[i].timeStr %></small>
                                </div>
                                <% for(var index=0; index<dataList[i].data.length; index++) { %>
                                    <small>[<%= dataList[i].data[index] %>]</small>
                                    <br>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>



            <div class="col-md-4">

                    <div class="card">
                        <div class="card-body">
                            <small><b>Log monitor</b></small>
                            <br><br>
                            <div class="card terminalLike">
                                <pre class="terminalLike"><%= serverLog%></pre>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <small><b>Log UNIX</b></small>
                            <br><br>
                            <div class="card terminalLike">
                                <pre class="terminalLike"><%= unixLog%></pre>
                            </div>
                        </div>
                    </div>
            </div>


        </div>
    </div>


    <hr>

    <script>
        // With JQuery
        function sendServerState(state, id) {
            console.log('sendServerState['+id+']['+state+']')
            var xhr = new XMLHttpRequest();
            xhr.open("GET", 'server/'+id+'/state?state='+state, true);
            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            xhr.onreadystatechange = function() {//Call a function when the state changes.
                if(this.readyState == XMLHttpRequest.DONE && this.status == 200) {
                    var delayInMilliseconds = 2000;
                    setTimeout(function() {
                        window.location.reload(true);
                    }, delayInMilliseconds);
                }
            }
            xhr.send();
        }
    </script>

    <%- include('partials/footer') %>
</body>

</html>