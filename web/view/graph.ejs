<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>ListenServer Graph</title>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <script src="/web/js/chartsLoader.js"></script>
</head>

<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid mainContainer">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <small><b>Last 24H</b></small>
                        <div class="card-text"><canvas id="chartLast">
                        </canvas></div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <small><b>Graph request by hours</b></small>
                        <div class="card-text" ><canvas id="chartDay">
                        </canvas></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <small><b>Graph request by hours</b></small>
                        <div class="card-text"><canvas id="chartDot"></canvas></div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <%- include('partials/footer') %>
</body>

<script>
    setLoadChart('chartDay', '/web/api/graph/dayhour', false);
    setLoadChart('chartLast', '/web/api/graph/last24', false);
    setLoadChart('chartDot', '/web/api/graph/dotByHour', true);
</script>
</html>