<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>ListenServer Graph</title>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
</head>

<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid mainContainer">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <small><b>Graph request by hours</b></small>
                        <div class="card-text"><canvas id="chartLast"></canvas></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <small><b>Graph request by hours</b></small>
                        <div class="card-text"><canvas id="chartDay"></canvas></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <small><b>Graph request by hours</b></small>
                        <div class="card-text"><canvas id="chartDot"></canvas></div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <%- include('partials/footer') %>
</body>
<script>
    var ctxDay = document.getElementById('chartDay').getContext('2d');
    var chartDay = new Chart(ctxDay, {
        // The type of chart we want to create
        type: 'bar',
        // The data for our dataset
        data: {
            labels: [<%= dataDay.labels %>],
            datasets: [
            <% for(var i=0; i<dataDay.data.length; i++) { %>
                { 
                label: "Port <%= dataDay.name[i] %>",
                backgroundColor: 'rgba(<%= Math.random()*255 %>, <%= Math.random()*255 %>, <%= Math.random()*255 %>, 0.8)',
                data: [<%= dataDay.data[i] %>],
                }
                <% if(i+1 != dataDay.data.length){ %>,<% } %>
            <% } %>
            ]
        },
        options: {
            scales: {
                xAxes: [{
                    stacked: true
                }],
                yAxes: [{
                    stacked: true
                }]
            }
        }
    });

    var ctxDot = document.getElementById('chartDot').getContext('2d');
    var chartDot = new Chart(ctxDot, {
        // The type of chart we want to create
        type: 'doughnut',
        // The data for our dataset

        data: {
            labels: [<%= dataDot.labels %>],
      datasets: [
                {
                label: "Request",
                backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
                data: [<%= dataDot.data %>]
                }
            ]
        },
        options: {}
    });

    var ctxLast = document.getElementById('chartLast').getContext('2d');
    var chartLast = new Chart(ctxLast, {
        // The type of chart we want to create
        type: 'bar',
        // The data for our dataset
        data: {
            labels: [
            <% for(var i=0; i<dataLast.labels.length; i++) { %>
                '<%= dataLast.labels[i] %>'
                <% if(i+1 != dataLast.labels.length){ %>,<% } %><% } %>
            ],
            datasets: [
            <% for(var i=0; i<dataLast.data.length; i++) { %>
                { 
                label: "Port <%= dataLast.portList[i] %>",
                backgroundColor: 'rgba(<%= Math.random()*255 %>, <%= Math.random()*255 %>, <%= Math.random()*255 %>, 0.8)',
                data: [<%= dataLast.data[i] %>],
                }
                <% if(i+1 != dataLast.data.length){ %>,<% } %>
            <% } %>
            ]
        },
        options: {
            scales: {
                xAxes: [{
                    stacked: true
                }],
                yAxes: [{
                    stacked: true
                }]
            }
        }
    });
</script>

</html>